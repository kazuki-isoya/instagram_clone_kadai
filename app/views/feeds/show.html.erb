<div class="feeds_body">
  <p>コメント：<%= @feed.content %></p>
  <p>
    画像:
    <%= image_tag @feed.image.url %>
  </p>
  <br>
  <h4>お気に入りにしたユーザー</h4>
  <% @feed.favorite_users.each do |user| %>
    <%= user.name %>
    <br>
  <% end %>
</div>
<footer>
  <% unless @feed.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りする', favorites_path(feed_id: @feed.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>
  <% if current_user.id == @feed.user.id %>
      <%= link_to '編集', edit_feed_path(@feed), class: 'btn btn-primary' %>
  <% end %>
    <%= link_to '戻る', feeds_path, class: 'btn btn-primary' %>
</footer>
