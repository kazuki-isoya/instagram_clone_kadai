<!DOCTYPE html>
<html>
  <head>
    <title>FBClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key,value| %>
      <%= content_tag(:div,value,class:"#{key}") %>
    <% end %>
    <header>
      <% if logged_in? %>
        <p>ログイン中のユーザー:<%= current_user.name %></p>
        <%= link_to "プロフィール", user_path(current_user.id) %>
        <%= link_to "ログアウトする", session_path(current_user.id), method: :delete %>
      <% else %>
        <%= link_to "新しいユーザーを作成", new_user_path %>
        <%= link_to "ログインする", new_session_path %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
