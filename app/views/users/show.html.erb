<div class="users_body">
  <!-- <%= notice %><%= alert %> -->
  <h1><%= @user.name %>のページ</h1>
  <p>メールアドレス: <%= @user.email %></p>
  <p>
    プロフィール画像:
    <%= image_tag @user.image.url %>
  </p>
  <br>
  <h3>お気に入りにした投稿</h3>
  <% @user.favorite_feeds.each do |feed| %>
    <%= feed.content %>
    <br>
  <% end %>
</div>

<footer>
  <%= link_to '投稿画面へ', feeds_path, class: 'btn btn-primary' %>
  <% if current_user.id == @user.id %>
    <%= link_to 'プロフィールを編集', edit_user_path, class: 'btn btn-primary' %>
    <%= link_to 'お気に入り一覧', favorite_index_users_path, class: 'btn btn-primary' %>
  <% end %>
</footer>
